---
interface Proyecto {
  title: string;
  description: string;
  link: string;
  image: string;
}

const PROYECTS: Proyecto[] = [
  {
    title: "Briggite Dtalles",
    description:
      "Pagina de flores con carrito de compras, con supabase y cloudinary",
    link: "https://briggite-dtalles.vercel.app/",
    image: "/Proyect1.webp",
  },
  {
    title: "Productos Perecibles - Promart ",
    description:
      "Sistema de control de productos perecibles para Promart - SKU de prueba 16141",
    link: "https://perecibles-promart-1z42hk3xj-onlysid07s-projects.vercel.app/",
    image: "/Proyect2.webp",
  },
  // Agrega más proyectos según sea necesario
];
---

<div class="grid gap-8">
  {
    PROYECTS.map((proyecto) => (
      <div class=" bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 hover:scale-102 transition-all  dark:border-gray-700">
        <img
          class="rounded-t-lg"
          src={proyecto.image}
          alt="Imagenes del proyecto"
        />

        <div class="p-5">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            {proyecto.title}
          </h5>

          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            {proyecto.description}
          </p>
          <a
            href={proyecto.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            Ver Proyecto
            <svg
              class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        </div>
      </div>
    ))
  }
</div>
