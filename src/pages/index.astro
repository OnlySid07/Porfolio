---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import MailIcon from "../icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <SectionContainer class="py-40 pb-25 items-center justify-center">
      <img
        class="h-20 w-20 rounded-full mb-5"
        src="/public/foto.png"
        alt="Foto mia"
      />
      <h1 class="text-5xl font-bold flex flex-row gap-x-5 pb-4">
        Hola, Soy Josu <a
          href="https://www.linkedin.com/in/josue-campana/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Desarrollador Web</Badge>
        </a>
      </h1>

      <h2 class="mt-4 text-xl max-w-xl opacity-80">
        Soy un <span class="text-sky-500 font-semibold">desarrollador web</span>
        de Lima, Perú, especializado en
        <span class="text-emerald-500 font-semibold">automatizar procesos</span>
        y optimizar flujos de trabajo. Me apasiona crear
        <span class="text-violet-500 font-semibold"
          >experiencias digitales únicas</span
        >, efectivas y enfocadas en
        <span class="text-amber-500 font-semibold">resultados</span>.
      </h2>
      <nav class="flex space-x-4">
        <SocialPill href="https://github.com/Onlysid07">
          <GithubIcon class="size-6" /> Github
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/josue-campana/">
          <LinkedinIcon class="size-6" /> Linkedin
        </SocialPill>
        <SocialPill>
          <MailIcon class="size-6" /> josue.campana.mendoza@gmailcom
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer>
      <h2 class="flex text-3xl font-bold mb-8">Experiencia Laboral</h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
