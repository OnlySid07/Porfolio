---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import MailIcon from "../icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Josu Campaña - Desarrollador Web en Lima, Perú"
  description="Desarrollador web especializado en automatizar procesos y crear experiencias digitales únicas. Experto en frontend y backend."
>
  <main class="px-4">
    <SectionContainer class="py-20 md:py-40 pb-16 md:pb-25">
      <img
        class="size-15 md:h-15 md:w-15 rounded-full mb-5 object-cover"
        src="https://res.cloudinary.com/dg3mlw6bn/image/upload/v1760650445/foto_dmtvpc.webp"
        alt="Foto de Josu Campaña"
        width="112"
        height="112"
        loading="eager"
        fetchpriority="high"
      />
      <h1
        class="text-3xl md:text-3xl font-bold flex sm:flex-row gap-x-5 gap-y-3 pb-4 items-center"
      >
        Hola, Soy Josu
        <a
          href="https://www.linkedin.com/in/josue-campana/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Desarrollador Web</Badge>
        </a>
      </h1>

      <h2 class="mt-4 text-base md:text-xl max-w-xl opacity-80">
        Soy un <span class="text-sky-500 font-semibold">desarrollador web</span>
        de Lima, Perú, especializado en
        <span class="text-emerald-500 font-semibold">automatizar procesos</span>
        y optimizar flujos de trabajo. Me apasiona crear
        <span class="text-violet-500 font-semibold"
          >experiencias digitales únicas</span
        >, efectivas y enfocadas en
        <span class="text-amber-500 font-semibold">resultados</span>.
      </h2>

      <nav class="flex flex-col md:flex-row gap-2 md:gap-4 mt-4">
        <SocialPill href="https://github.com/Onlysid07">
          <GithubIcon class="size-4 md:size-6" />
          <span class="hidden sm:inline">Github</span>
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/josue-campana/">
          <LinkedinIcon class="size-4 md:size-6" />
          <span class="hidden sm:inline">Linkedin</span>
        </SocialPill>
        <SocialPill href="mailto:josue.campana.mendoza@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          <span class="hidden lg:inline">josue.campana.mendoza@gmail.com</span>
          <span class="hidden sm:inline">Email</span>
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer class="mb-16">
      <h2 class="flex text-2xl md:text-3xl font-bold mb-8">
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
